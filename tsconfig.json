{
	"compilerOptions": {
		"outDir": "build",
		"module": "Commonjs",
		"target": "ES6",
		"lib": ["dom", "ES2015", "ES2017"],
		"noImplicitAny": true,
		"moduleResolution": "node",
		"jsx": "react",
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"esModuleInterop": true,
		"removeComments": true,
		"skipLibCheck": true,
		"strict": true,
		"sourceMap": true,
		"baseUrl": "./src"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "build"]
}
